!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Phoenix Message'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Phoenix Message'}"}
    = favicon_link_tag "favicon-96x96.png"
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = csrf_meta_tags
  %body.phoenix-message
    = yield
